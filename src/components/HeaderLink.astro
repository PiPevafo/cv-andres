---
const { href, main, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const hrefPath = href.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);

const isActive = hrefPath === pathname || hrefPath === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, { active: isActive }, { principal: main }]} {...props}>
	<slot />
</a>

<style>
	a {
		display: inline-block;
		text-decoration: none;
		letter-spacing: 0.15em;
		font-size: 1rem;
	}
	a:hover {
		border-bottom-color: var(--gray) !important;
	}
	a.principal {
		color: var(--accent) !important;
	}
</style>
