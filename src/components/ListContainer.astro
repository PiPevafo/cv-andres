<ul>
    <slot />
</ul>

<script>
    window.toggle = (slug) => {
        const content = document.getElementById(slug);
        const { style } = content!;
        style.display =
            style.display === 'none' || style.display === '' ? 'block' : 'none';

        const iconUp = document.querySelector(`.icon-${slug}-svg-up`);
        const iconDown = document.querySelector(`.icon-${slug}-svg-down`);

        if (style.display === 'none' || style.display === '') {
            iconUp!.setAttribute('style', 'display: none;');
            iconDown!.setAttribute('style', '');
        } else {
            iconUp!.setAttribute('style', '');
            iconDown!.setAttribute('style', 'display: none;');
        }
    };
</script>

<style>
    ul {
        margin: 0;
        padding: 0;
    }
</style>